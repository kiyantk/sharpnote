{
  "name": "sharpnote",
  "version": "1.0.0",
  "main": "build/electron.js",
  "private": true,
  "author": "Kiyan <contact@kiyantk.nl>",
  "build": {
    "appId": "com.kiyantk.sharpnote",
    "productName": "SharpNote",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/dist/**/*",
      "!**/*.map",
      "database.js",
      "node_modules/**/*",
      "package.json",
      "src/**/*"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerSidebar": "build/sharpnote-v1-installfinished.bmp"
    },
    "fileAssociations": [
      {
        "ext": "sharp",
        "name": "SharpNote",
        "icon": "public/favicon-256x256.ico"
      },
      {
        "ext": "sharpbook",
        "name": "SharpBook",
        "icon": "public/favicon-256x256.ico"
      }
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "icon": "public/favicon-256x256.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "public/logo512.png",
      "target": [
        "AppImage"
      ]
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-regular-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^13.5.0",
    "better-sqlite3": "^11.8.1",
    "concurrently": "^9.1.2",
    "fs": "^0.0.1-security",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-scripts": "5.0.1",
    "wait-on": "^8.0.2",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "dev": "concurrently \"npm start\" \"npx wait-on http://localhost:3000 && npm run electron\"",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "make-dmg": "electron-installer-dmg dist/mac/SharpNote-darwin-x64/SharpNote.app dist/mac-installer"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron-forge/maker-deb": "^7.7.0",
    "@electron/packager": "^18.3.6",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "electron-installer-dmg": "^5.0.1",
    "electron-packager": "^17.1.2"
  }
}
